// slide menu
.head-toggle
	cp()
	position absolute
	top 25px
	right: 28px
	.icon
		size 26px
		fill white
	.icon-close
		display: none

.head-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-menu
	+below(1024px)
		transform translateX(-100%)
	+below(640px)
		width: 100%!important
	background: $yellow
	color white
	position: fixed
	height: 100% //Отступ хедер
	z-index 1250
	top 0
	left 0
	padding: 40px
	tr(all)
	transform translateX(calc(-500px + 80px))
	width: 500px!important
.slide-menu--open
	transform translateX(0%)
	overflow-y: auto
.slide-menu__list
	+below(640px)
		margin 20px 0
	margin 40px 0
	ul
		padding-left: 0
		li
			list-style none
	a
		+below(640px)
			font-size: 14px
			margin-bottom: 20px
		display: block
		margin-bottom: 40px
		color black
		up()
		tr(all)
		font-size: 18px
		font-weight: 700
		&:hover
			color white
.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important
// slide menu === end

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
// animate top menu === end


