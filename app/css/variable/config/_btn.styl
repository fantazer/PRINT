// ============================ Buttons ============================
.btn
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	font-weight: 700
	&:hover
		cursor pointer

.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px

.btn--md
	@extend .btn
	font-size 15px
	padding 20px 45px

.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $mark
	.nav-icon
		fill white
	&:hover
		background-color darken($mark,20)
	&:active
		background-color darken($mark,20)
	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	border 1px solid $border-color
	background-color #ffffff
	&:hover
		border 1px solid $mark
	.nav-icon
		fill $mark

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--empty
	@extend .btn
	border 1px solid black
	color black
	&:hover
		background: black
		color white

.btn--yellow
	@extend .btn
	border 1px solid $yellow
	color $yellow
	&:hover
		background: $yellow
		color black

.btn--icon
	flex(mid)

.nav-icon
	size 20px
	display inline-block

.nav-icon--left
	margin-left 10px

.nav-icon--right
	margin-rihgt 10px


.contact-wrap
	f()
	justify-content space-between
.contact-info
	width: 30%
.contact-form
	width: 50%

.contact-val
	@extend .type--xlg
	line-height: 1.6
	color white
	margin-bottom: 40px
.contact-copyright
	color white
	@extend .type--lg

.contact-phone
	@extend .type--xl
	font-weight: 700
	color $yellow
	display block
	margin-bottom: 40px

