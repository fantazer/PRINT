include block_html/_style.pug
include block_html/_include.pug

+header()
.page
	.page-cont
		+slideMenu()
		.content
			.section.section--mid.section--extend(style="background-image:url('img/bg-tools.jpg')")
				.filter-bg.filter--gray
				.section-cont.section-cont--main
					.main-cont
						.section-title-line
						.section-title-sub Наши работы
						.section-title портфолио
						.galary-head
							.galary-head__el.filter(data-filter=".filter--logo")
								.galary-head__el-icon
									+icon("pan","icon")
								.galary-head__el-text Лого <br> и фирменный стиль
							.galary-head__el.filter(data-filter=".filter--design")
								.galary-head__el-icon
									+icon("rule","icon")
								.galary-head__el-text Дизайн полиграфии
							.galary-head__el.filter(data-filter=".filter--advertising")
								.galary-head__el-icon
									+icon("rocket","icon")
								.galary-head__el-text Реклама
							.galary-head__el.filter(data-filter=".filter--digital")
								.galary-head__el-icon
									+icon("monitor","icon")
								.galary-head__el-text Digital

			.section
					.galary-wraper
						- for (var i=0;i<4;i++)
							div(class="filter--logo mix mix-el" style="background-image:url('img/item-1.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Лого и фирменный стиль
									.mix-val Корпоративный стиль

							div(class="filter--design mix mix-el" style="background-image:url('img/item-2.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Дизайн полиграфии
									.mix-val Корпоративный стиль
							div(class="filter--advertising mix mix-el" style="background-image:url('img/item-3.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Digital
									.mix-val Корпоративный стиль
							div(class="filter--digital mix mix-el" style="background-image:url('img/item-4.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Реклама
									.mix-val Корпоративный стиль
							div(class="filter--logo mix mix-el" style="background-image:url('img/item-5.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Лого и фирменный стиль
									.mix-val Корпоративный стиль

							div(class="filter--design mix mix-el" style="background-image:url('img/item-6.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Дизайн полиграфии
									.mix-val Корпоративный стиль
							div(class="filter--advertising mix mix-el" style="background-image:url('img/item-7.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Digital
									.mix-val Корпоративный стиль
							div(class="filter--digital mix mix-el" style="background-image:url('img/item-8.jpg')")
								.mix-filter
								.mix-content
									.mix-line
									.mix-type Реклама
									.mix-val Корпоративный стиль
			+footer()
include ./block_html/_script.pug
